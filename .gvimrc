" vim: foldmethod=marker foldlevel=0

" Open Vim to 120 columns and 40 lines {{{
set columns=120
set lines=40
" }}}

" Remove toolbar {{{
set guioptions-=T
" }}}

" Remove scrollbars {{{
set guioptions-=L
set guioptions-=r
" }}}

" Don't uset GUI dialogs {{{
set guioptions+=c
" }}}

" Don't uset UI chrome for tabs {{{
set guioptions-=e
" }}}

" Uset Solarized {{{
colorscheme solarized
" }}}

" Uset Ubuntu Mono {{{
set guifont=Ubuntu\ Mono:h18
" }}}
