" vim: foldmethod=marker foldlevel=0

" Open gVim to 84 columns and 30 lines {{{
set columns=84
set lines=30
" }}}

" Remove toolbar {{{
set guioptions-=T
" }}}

" Remove scrollbars {{{
set guioptions-=L
set guioptions-=r
" }}}

" Don't uset GUI dialogs {{{
set guioptions+=c
" }}}

" Don't uset UI chrome for tabs {{{
set guioptions-=e
" }}}

" Uset Solarized {{{
colorscheme solarized
" }}}

" Uset Ubuntu Mono {{{
set guifont=Ubuntu\ Mono:h18
" }}}
